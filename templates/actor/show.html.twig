{% extends 'base.html.twig' %}
{% block title %}Acteurs{% endblock %}

{% block body %}

<div class="media">
  <div class="media-body">
    <h1 class="mt-0">{{ actor.name }}</h1>
        {% for program in programs %}
        <div>
            <a href="{{ path("program_show", { 'program': program.id }) }}">{{ program.title }}</a>
        </div>
    {% else %}
        Aucun acteur trouvé.
    {% endfor %}
  </div>
</div>

<a href="{{ path('actor_index') }}">
    Retour à la liste des acteurs
</a>

{% endblock %}